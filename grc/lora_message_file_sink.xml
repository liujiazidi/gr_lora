<?xml version="1.0"?>
<block>
  <name>Message File Sink</name>
  <key>lora_message_file_sink</key>
  <category>[LoRa]</category>
  <import>import lora</import>
  <make>lora.message_file_sink($path)</make>

  <param>
    <name>Path</name>
    <key>path</key>
    <type>string</type>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>
</block>
